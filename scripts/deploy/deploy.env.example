# 部署环境变量示例（复制为 deploy.env 并填写，或 export 后执行 ./scripts/deploy.sh）
# 部署时请勿提交 deploy.env
# 使用密码登录时需安装 sshpass：Ubuntu/Debian: apt install sshpass；macOS: brew install sshpass

# 服务器 SSH
export DEPLOY_HOST="118.193.46.228"
export DEPLOY_USER="root"
export DEPLOY_SSH_PASSWORD=""   # 若使用密钥可留空；否则填 SSH 登录密码

# MySQL（后端连接 + 建库）
export MYSQL_HOST="127.0.0.1"
export MYSQL_PORT="3306"
export MYSQL_USER="root"
export MYSQL_ROOT_PASSWORD="korealu"
export MYSQL_DATABASE="pet_eternal_flame"

# 后端 JWT（生产请用随机长串）
export JWT_SECRET="your-jwt-secret-change-in-production"

